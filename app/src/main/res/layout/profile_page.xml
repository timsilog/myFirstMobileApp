<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/button_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Edit Profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="name here"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />
    <TextView
        android:id="@+id/label_bday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bday"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:fontFamily="sans-serif"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/label_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="weight"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        app:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@+id/label_bday"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/label_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="height"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:fontFamily="sans-serif"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/label_weight"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/label_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gender"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:fontFamily="sans-serif"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/label_height"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/label_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="activity level"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:fontFamily="sans-serif"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/label_gender"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/label_bmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bmi"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:fontFamily="sans-serif"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/label_activity"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/label_bmr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bmr"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:fontFamily="sans-serif"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/label_bmi"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/label_tdee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tdee"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:fontFamily="sans-serif"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/label_bmr"
        app:layout_constraintLeft_toLeftOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
